// Datasource configuration
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Prisma Client generator
generator client {
  provider = "prisma-client-py"
}



enum EventType {
  click
  page_view
  form_submit
}

// Models (database tables)


model Interaction {
    id          Int       @id @default(autoincrement())
    user_id     String    
    event_type  EventType    // NOT NULL (default)
    metadata    Json?
    created_at  DateTime @default(now())

    @@index([user_id])
    @@index([event_type])

}

